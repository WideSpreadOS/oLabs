<style>
    .single-item-container {
        background-color: #9fe4813b;
        box-shadow: 0 30px 25px #00000071, inset 0 0 50px #3399cc38;
        width: 95%;
        margin-inline: auto;
        border-radius: 1rem;
        padding: 1rem;
        margin-top: 50px;
    }
    .single-item-header {
        max-width: 100%;
        width: 100%;
        margin-inline: auto;
        background-color: #ffffff7e;
        border-radius: 1rem;
        padding: 1rem;
        position: relative;
    }
    .single-item-header h1 {
        padding: 0.5rem;
        border-bottom: solid 1px #ccc;
    }
    .single-item-header h6 {
        padding: 0.5rem;
        color: #888;
        font-size: 1rem;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    .single-item-header p {
        margin-top: 20px;
        padding-bottom: 40px;
    }
    .single-item-header img {
        max-width: 100%;
        max-height: 100%;
        margin-top: 1rem;
        border-radius: 1rem;
    }
    .single-item-actions, .single-item-body, .single-item-footer {
        text-align: center;
        padding: 0.5rem;
        border-bottom: solid 1px #ccc;
    }
    .single-item-footer {
        border-bottom: none;
    }




    #bigImageEl {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100vw;
        height: 100vh;
        z-index: 99999;
        background-color: #111;
    }
    #bigImage {
        max-width: 95vw;
        max-height: 95vh;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 1rem;    
    }
</style>
<div id="nav">
    <a href="/">Home</a>
    <a href="/company/projects">Projects</a>
    <a href="/company/inventory" class="active-link">Inventory</a>
    <a href="/company/resources">Resources</a>
    <a href="/company/notes">Notes</a>
</div>

<div class="logo-container">
    <img src="/images/system/olabs_logo_1a1a1a.png" alt="oLabs Logo">
</div>

<div class="single-item-container">

    <div class="single-item-header">

        <h1><%= item.data.name %></h1>
        <h6><%= item.data.item_type %></h6>
        <img src="<%= item.data.photos[0] %>" alt="<%= item.name %> Image">
        <p><%= item.data.description %></p>
        <span style="color: yellowgreen; font-size: 1.5rem; font-weight: bold; position: absolute; right: 1rem; bottom: 1rem;">$<%= item.data.price %></span>
    </div>
    <div class="single-item-actions">
        <h2>Item Actions</h2>
    </div>

    <div class="single-item-body">
        <h2>Item Body</h2>
    </div>
    <div class="single-item-footer">
        <h2>Item Footer</h2>
    </div>
</div>

<div id="bigImageEl" class="hidden">
    <h1 style="text-align: center; color: #ccc;"><%= item.data.name %></h1>
    <img src="" alt="" id="bigImage">
</div>

<script>
    const
        itemImages = document.querySelectorAll('.single-item-header img'),
        bigImageEl = document.querySelector('#bigImageEl'),
        bigImage = document.querySelector('#bigImage')

    itemImages.forEach(image => {
        image.addEventListener('click', e => {
            const imageSrc = image.getAttribute('src')
            bigImage.setAttribute('src', imageSrc)
            bigImageEl.classList.toggle('hidden')
        })
    })
    bigImage.addEventListener('click', e => {
        bigImage.setAttribute('src', '')
        bigImageEl.classList.toggle('hidden')
    })
</script>