<style>
    .drag-container {
        width: 90vw;
        background-color: #bcbcbc;
        margin-inline: auto;
        padding: 2rem;
        padding-top: 4rem;
        margin-top: 2rem;
        margin-bottom: 10rem;
        border-radius: 1rem;
    }
    .draggable {
        background-color: aqua;
        margin-bottom: 2rem;
        cursor: grab;
        position: relative;
        border-radius: 1rem;
        padding: 1rem;
        border: solid 2px transparent;
    }

    .dragging {
        opacity: 0.5;
    }
    .draggable[data-complete="true"] {
        border: solid 2px orangered;
    }
    .draggable[data-complete="true"]::after {
        content: 'DONE';    
        position: absolute;
        top: -10px;
        right: -20px;
        width: 80px;
        height: 20px;;
        background-color: orangered;
        font-weight: bold;
        padding: 3px;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
    }
</style>



