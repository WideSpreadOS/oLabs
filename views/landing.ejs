<h3>RESOURCES</h3>

<div class="resource-container">
    <% allResources.forEach(function(resource) { %>
        <div class="resource">
            <div class="resource-header">
                <div class="resource-name">
                    <h5><%= resource.name %></h5>
                </div>
                <div class="resource-category">
                    <div class="main-category">
                        <span><%= resource.category %></span>
                    </div>
                    <div class="resource-sub-categories">
                        <% resource.sub_category.forEach(function(subCat) { %>
                            <span><%= subCat %></span>
                        <% }) %>
                    </div>
                </div>
            </div>
            <div class="resource-body">
                <div class="main-resource">
                    <a target="_blank" href="<%= resource.main_url %>"><%= resource.main_url %></a>
                </div>
                <div class="other-resources">
                    <% resource.urls.forEach(function(url) { %>
                        <a target="_blank" href="<%= url %>"><%= url %></a>
                    <% }) %>
                </div>
            </div>

        </div>
    <% }) %>
</div>



<h3>NOTES</h3>

<div class="note-container">
    <% allNotes.forEach(function(note) { %>
        <div class="note">
            <div class="note-header">
                <div class="note-title">
                    <h5><%= note.title %></h5>
                </div>
                <div class="note-categories">
                    <div class="main-category">
                        <span><%= note.category %></span>
                    </div>
                    <div class="note-sub-categories">
                        <% note.sub_category.forEach(function(cat) { %>
                            <span><%= cat %></span>
                        <% }) %>
                    </div>
                </div>
            </div>
            <div class="note-body">
                <p><%= note.body %></p>
            </div>
            <div class="note-added">
                <span><%= note.added.toLocaleDateString("en-US") %> - <%= note.added.toLocaleTimeString() %></span>
            </div>
        </div>
    <% }) %>
</div>





<h3>ITEMS</h3>

<div class="item-container">
    <% allItems.forEach(function(item) { %>
        <div class="item">
            <div class="item-header">
                <div class="item-name">
                    <h5><%= item.data.name %></h5>
                </div>
            </div>
            <div class="item-price">
                <p><%= parseFloat(item.data.price) %></p>
            </div>
            <% item.data.photos.forEach(function(photo) { %>
                <img src="<%= photo %>" alt="">
            <% }) %>
        </div>
    <% }) %>
</div>


<h3>PROJECTS</h3>
<div class="project-container">
    <% allProjects.forEach(function(project) { %>
        <div class="project">
            <div class="project-importance">
                <span><%= project.importance_scale %></span>
            </div>
            <div class="project-header">
                <div class="project-name">
                    <h5><%= project.title %></h5>
                </div>
            </div>
            <div class="project-body">
                <p><%= project.description %></p>
            </div>
        </div>
    <% }) %>
</div>
